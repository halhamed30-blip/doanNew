<section class="hero">
  <div class="page-width hero__grid">
    <div class="hero__content">
      <p class="eyebrow">Doan Treasures</p>
      <h1>{{ section.settings.heading }}</h1>
      <p class="hero__copy">{{ section.settings.subheading }}</p>
      <div class="hero__actions">
        <a class="button" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
        <a class="button button--ghost" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
      </div>
    </div>
    <div class="hero__visual">
      {% if section.settings.hero_image != blank %}
        <img src="{{ section.settings.hero_image | image_url: width: 900 }}" alt="{{ section.settings.hero_image.alt | escape }}">
      {% else %}
        <div class="hero__placeholder">
          <span>Curated treasures await.</span>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Timeless finds, thoughtfully collected."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore our curated collection of keepsakes, each inspired by cherished travels and stories worth sharing."
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Shop the collection"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "Our story"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link",
      "default": "#story"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
