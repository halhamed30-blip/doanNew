<section id="story" class="story">
  <div class="page-width story__grid">
    <div class="story__content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.body }}</p>
      <div class="story__highlights">
        <div>
          <span class="story__value">{{ section.settings.highlight_one }}</span>
          <p>{{ section.settings.highlight_one_label }}</p>
        </div>
        <div>
          <span class="story__value">{{ section.settings.highlight_two }}</span>
          <p>{{ section.settings.highlight_two_label }}</p>
        </div>
        <div>
          <span class="story__value">{{ section.settings.highlight_three }}</span>
          <p>{{ section.settings.highlight_three_label }}</p>
        </div>
      </div>
    </div>
    <div class="story__card">
      <p class="eyebrow">Handpicked</p>
      <h3>{{ section.settings.card_heading }}</h3>
      <p>{{ section.settings.card_body }}</p>
      <a class="text-link" href="{{ section.settings.card_link }}">{{ section.settings.card_link_label }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Story",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A boutique collection rooted in travel."
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body",
      "default": "Doan Treasures celebrates handcrafted pieces and vintage keepsakes sourced from artisans worldwide. Each item is curated for its warmth, story, and sense of wonder."
    },
    {
      "type": "text",
      "id": "highlight_one",
      "label": "Highlight one value",
      "default": "4"
    },
    {
      "type": "text",
      "id": "highlight_one_label",
      "label": "Highlight one label",
      "default": "Featured favorites"
    },
    {
      "type": "text",
      "id": "highlight_two",
      "label": "Highlight two value",
      "default": "12"
    },
    {
      "type": "text",
      "id": "highlight_two_label",
      "label": "Highlight two label",
      "default": "Artisans represented"
    },
    {
      "type": "text",
      "id": "highlight_three",
      "label": "Highlight three value",
      "default": "3"
    },
    {
      "type": "text",
      "id": "highlight_three_label",
      "label": "Highlight three label",
      "default": "Continents explored"
    },
    {
      "type": "text",
      "id": "card_heading",
      "label": "Card heading",
      "default": "Designed for gifting"
    },
    {
      "type": "textarea",
      "id": "card_body",
      "label": "Card body",
      "default": "From heirloom ceramics to woven textiles, our pieces are meant to be shared and treasured."
    },
    {
      "type": "text",
      "id": "card_link_label",
      "label": "Card link label",
      "default": "Explore the journal"
    },
    {
      "type": "url",
      "id": "card_link",
      "label": "Card link",
      "default": "/blogs/news"
    }
  ],
  "presets": [
    {
      "name": "Story"
    }
  ]
}
{% endschema %}
